{{> cssnormalize }}

body {
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  margin: 0 0 0 250px;
}

ul { margin-bottom: 1em; }
li { margin-bottom: .4em; }

.hide { display: none; }

/* Basics
------------------------------------------------------------------------------------ */

a { color: {{ secondary }}; }

h1 {
  font-size: 42px;
  line-height: 48px;
  font-weight: normal;
  letter-spacing: -1px;
  margin: 0;
  color: #495361;
}

.retina-image { zoom: 50%; }

table th { font-weight: bold; }
table th, table td { 
  border: 1px solid #ddd;
  padding: 6px 13px;
}
table tr {
    border-top: 1px solid #ccc;
    background-color: #fff; 
}
table tr:nth-child(2n) { background-color: #f8f8f8; }

blockquote {
  border-left: 4px solid #DDD;
  padding: 0 16px;
  margin: 0;
  color: #777;
}

/* Content
------------------------------------------------------------------------------------ */
article#content {
  display: block;
  margin: 45px 60px 60px; 
  font-size: 16px;
  line-height: 24px;
  color: #546070;
}

/* Header
------------------------------------------------------------------------------------ */
header#main {}
header#main .preface {
  display: block;
  max-width: 600px;
  font-size: 18px;
  line-height: 24px;
  margin-top: -13px;
  color: #A8B0BD;
}

/* Artboards
------------------------------------------------------------------------------------ */
.artboard {
  margin: 52px 0 76px 0;
}
  .artboard h2 {
    font-size: 22px;
    line-height: 24px;
    font-weight: normal;
    margin: 0;
    padding-bottom: 8px;
    max-width: 800px;
    color: #495361;
    border-bottom: 1px solid #ECEDF0;
  }
  .artboard h3 {
    font-size: 18px;
    line-height: 24px;
    font-weight: normal;
    margin: 0;
    padding-bottom: 8px;
    max-width: 800px;
    color: #495361;
    border-bottom: 1px solid #ECEDF0;
  }
  .artboard .image { margin-top: 20px; }
  .artboard .content { margin-top: 24px; max-width: 800px; }

/* Navigation
------------------------------------------------------------------------------------ */
nav#main-nav {
  position: fixed;
  width: 250px;
  top: 0;
  left: 0;
  bottom: 0;
  background: {{ primary }};
}

 nav#main-nav .logo {
    display: block;
    padding: 24px 24px 8px;
  }
    nav#main-nav .logo img {
      height: 24px;
      border: none;
    }

  nav#main-nav ul, nav#main-nav ol {
    margin: 0;
    padding: 0; 
    list-style: none;
  }
    nav#main-nav li { opacity: 0.5; }
    nav#main-nav li.active { opacity: 1; margin-bottom: 6px; }
    nav#main-nav li.active li { opacity: 1; }
    nav#main-nav ul li a {
      display: block;
      font-size: 16px;
      line-height: 16px;
      padding: 11px 24px 9px 24px; 
      color: #FFFFFF;
      text-decoration: none;
    }
    nav#main-nav ul li a:hover {
      background-color: #72767b;
    }

    nav#main-nav ol { margin-top: -2px; display: none; }
    nav#main-nav li.active ol { display: block; }
    nav#main-nav ol li { margin-bottom: 0; }
    nav#main-nav ol li a {
      font-size: 13px;
      padding: 4px 24px 4px 32px;
      margin: -2px 0;
    }
    nav#main-nav ol li a.sub {
      padding: 4px 24px 4px 48px;
      opacity: 0.7;
    }


